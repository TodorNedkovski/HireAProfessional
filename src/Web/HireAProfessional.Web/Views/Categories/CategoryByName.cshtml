@using HireAProfessional.Web.ViewModels.Categories;
@model CategoryViewModel
@{
    ViewData["Title"] = "CategoryByName";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

<div class="row">
    @foreach (var professional in this.Model.Professionals)
    {
        <div class="card">
            <img src="@professional.ImageUrl" alt="@professional.FirstName" style="width:100%">
            <h1>@professional.FirstName @professional.LastName</h1>
            <p class="title">@professional.Company</p>
            <p>@professional.Education</p>
            <a href="@professional.TwitterAccountLink"><i class="fa fa-twitter"></i></a>
            <a href="@professional.LinkedInAccountLink"><i class="fa fa-linkedin"></i></a>
            <a href="@professional.FacebookAccountLink"><i class="fa fa-facebook"></i></a>
            <p><button>Contact</button></p>
        </div>
    }
</div>
